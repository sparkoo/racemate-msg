{
  "compilerOptions": {
    "module": "nodenext", // Or "node16", "nodenext"
    "target": "esnext", // Or a target that supports ESM
    "moduleResolution": "nodenext", // Or "node16", "nodenext" (important for Node.js ESM)
    "declaration": true
  },
  "include": [
    "dist/*.ts", // Or src/**/*.js if protoc-gen-ts outputs JavaScript
    "*.proto" // Include proto files to be compiled
  ]
}
